
            <form class="search" action="/agency/search" method="POST">
                <input type="search" name="type" placeholder="Search here...">
                <button type="submit">Search</button>
            </form>

           {{#if have}}
               
            <section id="find-section">
              {{#each many}}
                {{> card}}    
                {{else}}   
                <!-- If there are no search matches, show: -->
                <div class="no-data-listing">
                <p class="no-offer">No match was found for the submitted type...</p>
                </div>
              {{/each}}
                
            </section>
             {{/if}}